<div>
	<%= form_tag manage_self_update_path,name: "form",class:"form-inline" do %>
		<%= text_field_tag :name,@manage_admin.uid,class: "form-control",placeholder: "登录名",autofocus: true %>
		<%= text_field_tag :name,@manage_admin.nickname,class: "form-control",placeholder: "用户名",autofocus: true %>
		<%= password_field_tag :password,@manage_admin.password,class: "form-control",placeholder: "密码" %>
		<%= text_field_tag :name,@manage_admin.email,class: "form-control",placeholder: "电子邮箱", autofocus: true %>
		<%= text_field_tag :name,@manage_admin.desc,class: "form-control login-input",placeholder:"个人描述",autofocus: true %>
		<%= submit_tag "修改",class: "btn btn-primary login-submit" %>
	<% end %>
</div>
